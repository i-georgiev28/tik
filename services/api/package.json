{
  "name": "api",
  "version": "1.0.0",
  
  "main": "src/server.ts",
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "generate": "drizzle-kit generate",
    "migrate": "ts-node-dev src/migrate.ts",
    "seed": "ts-node-dev src/seed.ts",
    "setup": "npm run generate && npm run migrate && npm run seed"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "drizzle-orm": "^0.44.7",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "drizzle-kit": "^0.31.7",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
